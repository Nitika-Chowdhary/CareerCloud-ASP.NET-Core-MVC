@model IEnumerable<CareerCloud.Pocos.ApplicantJobApplicationPoco>

<h4>Jobs Applied by the Applicant</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </th>
            <th>
                Company Website
            </th>
            <th>
                Job Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyJobPoco.CompanyProfilePoco.CompanyWebsite)
            </td>
            <td>
                @foreach (var desc in item.CompanyJobPoco.CompanyJobDescriptionPocos)
                {
                    @Html.DisplayFor(modelItem => desc.JobName)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


