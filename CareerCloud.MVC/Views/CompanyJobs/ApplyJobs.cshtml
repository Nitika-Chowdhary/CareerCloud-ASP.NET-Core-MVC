@model TempModel


<h1>Apply Jobs</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyNewJob">
            <div class="form-group">
                <label asp-for="Applicant" class="control-label"></label>
                <input asp-for="Applicant" class="form-control" value="@ViewBag.Applicant">
            </div>
            <div class="form-group">
                <label asp-for="Job"  class="control-label"></label>
                <select asp-for="Job"  class="form-control" asp-items="ViewBag.JobName"></select>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationDate" class="control-label"></label>
                <input asp-for="ApplicationDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="CompanyProfiles" asp-action="Index">Back to List</a>
</div>
